<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main2"
    android:orientation="vertical"
    tools:context=".GameSettingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@drawable/game">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:layout_height="80dp"
                android:layout_width="match_parent"
                android:src="@drawable/word_knowing_each_other" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical">
            <Spinner
                android:id="@+id/spinner"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_height="100dp"
                android:layout_width="match_parent" />
            <EditText
                android:id="@+id/name1"
                android:text="1P"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:hint="1P 이름"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:textColorHint="#383A3C" />
            <EditText
                android:id="@+id/name2"
                android:text="2P"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:hint="2P 이름"
                android:background="@drawable/edittext_rounded_corner_rectangle"
                android:textColorHint="#383A3C" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/start"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:src="@drawable/startbutton" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
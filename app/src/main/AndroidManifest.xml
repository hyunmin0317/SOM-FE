<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smu.som">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.smu.som.MasterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/Theme.SOM">
        <activity android:name="com.smu.som.IntroActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.smu.som.LoginActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.smu.som.SignupActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.smu.som.MainActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.smu.som.QuestionActivity" android:screenOrientation="portrait"/>
        <activity android:name="com.smu.som.UserInfoActivity" android:screenOrientation="portrait"/>
    </application>
</manifest>